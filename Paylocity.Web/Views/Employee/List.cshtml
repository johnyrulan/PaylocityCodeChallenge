@model List<Paylocity.Domain.Models.Employee>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employees</h2>

<div>    
    <a asp-action="Add">Add a New Employee</a>
</div>

@if (Model.Count == 0) {
    <div>There are no employees in the system. Add some to get started.</div>
}

else {
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model) {
            <tr>
                <td>@employee.Name</td>
                <td>
                    <a href="/Employee/@employee.Name">View</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

}
